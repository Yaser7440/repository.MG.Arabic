<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.shahidmbc"
       name="Shahid Arabic MBC"
       version="1.0.1"
       provider-name="shani,modified by mfaraj">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.beautifulsoup"/>
    <import addon="plugin.video.youtube" />
	<import addon="script.common.plugin.cache" />

  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>ShahidMBC.net XBMC Client</summary>
    <description>Formally known as ShahidMBC.net. This plugin fetches the video sources from ShahidMBC.net, youtube and some Live channels which you can play on XBMC compatible plateforms</description>
    <platform>all</platform>
  </extension>
</addon>
