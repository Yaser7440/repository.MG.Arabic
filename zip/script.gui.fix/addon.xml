<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
    id="script.gui.fix"
    name="GUI Crash Fix"
    version="1.0.0"
    provider-name="Demonstratorz"
    >
  <requires>
    <import addon="xbmc.python"                 version="2.1.0"/>
  </requires>
    <extension point="xbmc.service" library="service.py" start="startup">
  </extension> 
  <extension point="xbmc.python.script"         library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Switches to the appropriate skin</summary>
    <description lang="en">Just in case of a guisettings crash. this checks if the appropriate skin is currently being used and if not it will switch to it.</description>
    <language></language>
    <platform>all</platform>
    <website></website>
    <email>Demonstratorz.TDB@gmail.com</email>
  </extension>
</addon>
